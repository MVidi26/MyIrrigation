<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:id="@+id/viewItem"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="2dp"
        android:background="@drawable/shapeconfig"
        />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/textTitleItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/topic_Name"
        android:textSize="30sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="12dp" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/textDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="0dp"
        android:layout_marginTop="16dp"
        android:hint="@string/descriptionTopic"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/textTitleItem"
        app:layout_constraintTop_toBottomOf="@id/textTitleItem"
        tools:ignore="MissingConstraints" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/valueSensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:hint="500,00"
        android:textSize="50sp"
        app:layout_constraintEnd_toEndOf="@id/viewItem"
        app:layout_constraintTop_toTopOf="@id/viewItem" />

</androidx.constraintlayout.widget.ConstraintLayout>